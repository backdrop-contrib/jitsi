<?php

/**
 * Implements hook_field_schema().
 *
 */
function jitsi_field_schema($field) {
  if ($field['type'] == 'jitsi') {
    $schema['columns']['add_jitsi'] = array(
      'type' => 'int',
      'not null' => FALSE,
    );
    $schema['columns']['room_name'] = array(
      'type' => 'varchar',
      'not null' => FALSE,
      'length' => 255,
    );
    return $schema;
  }
}